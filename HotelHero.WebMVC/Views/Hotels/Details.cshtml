@model HotelHero.HotelsDatabase.Hotel

@{
    ViewData["Title"] = "Details";
}


<div>
    <h2>@Model.Name</h2>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Address"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Address, @Model.City
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Description"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Stars"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Stars
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Rating"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Rating
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
